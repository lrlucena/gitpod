{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Potigol",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.potigol",
				"match": "\\b(se|senao|senão|fim|entao|então|senaose|senãose|enquanto|faca|faça|para|de|ate|até|gere|tipo|retorne|escolha|caso|div|mod|nao|não|e|ou)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.potigol",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.potigol",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.potigol"
}